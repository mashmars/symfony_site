{% block title %}话题讨论-话题新建{% endblock %}
{% block banner %}
    <div class="grid-x">
        <div class="cell">
            <div class="callout large primary">
                <div class="text-center">
                  <h1>话题讨论</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block breadcrumb %}
<div class="grid-x">
    <nav aria-label="You are here:" role="navigation">
        <ul class="breadcrumbs">
        <li><a href="{{ path('home') }}">首页</a></li>
