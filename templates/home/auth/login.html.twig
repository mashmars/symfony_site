{% extends 'home/base.html.twig' %}
{% block title %}用户登陆{% endblock %}
{% block main %}
<!--main-->
<div class="grin-container" style="background: url(/home/images/login-register.jpg) center center/cover no-repeat!important; height: 100%; width:100%;position: fixed;">
    <div class="grid-x" >      
      <div class="cell">
          <div class="callout shadow" style="margin:0 auto;max-width:500px;top:200px;">
               {% for type,messages in app.flashes %}
              <div class="cell">
                  <div class="{{ type }} callout" data-closable="slide-out-right">
                    {% for message in messages %}
                    <p>{{ message }}</p>
                    {% endfor %}
                    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                </div>
              {% endfor %}
              {% form_theme form 'home/field.html.twig' %}
              {{ form_start(form ,{"attr":{"novalidate":"novalidate"}})}}
              {{ form_widget(form) }}
              {{ form_end(form) }}
              <div class="cell margin-bottom-3">
                <a class="float-right" href="{{ path('register') }}">没有账号，请先注册</a>
                <a class="float-left">忘记密码</a>
              </div>
            </div>
      </div>
    </div>
    
</div>
{% endblock %}