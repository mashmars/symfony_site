{% extends 'home/common_user.html.twig' %}
{% block breadcrumbs %}
          <div class="grid-x">
              <nav aria-label="You are here:" role="navigation">
                  <ul class="breadcrumbs">
                    <li><a href="#0">Home</a></li>
                    <li><a href="#0">Features</a></li>                    
                    <li>
                      <span class="show-for-sr">Current: </span> Cloning
                    </li>
                  </ul>
              </nav>  
          </div>
          {% endblock %}                  
            {% block right %}
            <div class="cell large-8 medium-7 margin-top-2 padding-1 shadow">                
               <a class="button small hollow" href="{{ path('user_blog_tag_add') }}"><i class="fi-plus"></i> 新增</a>
               <hr>
               {% for type,messages in app.flashes %}
              <div class="cell">
                  <div class="{{ type }} callout" data-closable="slide-out-right">
                    {% for message in messages %}
                    <p>{{ message }}</p>
                    {% endfor %}
                    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                </div>
                {% endfor %}
              <table class="hover">
                <thead>
                  <th>ID</th>
                  <th>名称</th>
                  <th>操作</th>
                </thead>
                <tbody>
                {% for tag in tags %}
                  <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>
                      <a class="button hollow tiny" href="{{ path('user_blog_tag_edit',{ 'slug':tag.id })}}"><i class="fi-pencil"></i> 编辑</a>
                      <a class="button hollow tiny alert" href="{{ path('user_blog_tag_delete',{'slug':tag.id}) }}"><i class="fi-trash"></i> 删除</a>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
            {% endblock %}
         