<!doctype html>
<html class="no-js" lang="en" dir="ltr">
<head>
<meta charset="utf-8">
<meta http-equiv="x-ua-compatible" content="ie=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>后台管理系统</title>
<link rel="stylesheet" href="/public/css/foundation.css">
<link rel="stylesheet" href="/public/icons/foundation-icons.css">
<link rel="stylesheet" href="/public/css/app.css">
</head>
<body>



<!--main-->
<div class="grin-container" style="background: url(/public/images/login-register.jpg) center center/cover no-repeat!important; height: 100%; width:100%;position: fixed;">
    <div class="grid-x" >          
      <div class="cell">
          <div class="callout shadow" style="margin:0 auto;max-width:500px;top:200px;">
              {% for type,messages in app.flashes %}
              <div class="cell">
                <div class="{{ type }} callout" data-closable="slide-out-right">
                  {% for message in messages %}
                  <p>{{ message }}</p>
                  {% endfor %}
                  <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              </div>
              {% endfor %} 
              <form action="{{ path('admin_login') }}" method="post">
                <h5 class="text-center">登录后台管理系统</h5>
                <div class="grid-x">
                  <div class="cell">
                    <label>用户名:
                      <input type="text" placeholder="用户名" name="username" id="username">
                      <span class="form-error username"></span>
                    </label>
                    <p class="help-text">请输入用户名登录</p>
                  </div>
                  <div class="cell">
                    <label>密码:
                      <input type="password" placeholder="密码" name="password" id="password">
                      <span class="form-error password"></span>
                    </label>                    
                  </div>
                  <div class="cell">
                    <input type="hidden" name="token" value="{{ csrf_token('admin-login') }}">
                    <button class="button hollow primary small" type="submit">登陆系统</button>
                  </div>
                  <div class="cell">
                    <a class="float-right" href="{{ path('admin_register') }}">没有账号，请先注册</a>
                  </div>
                </div>
              </form>
            </div>
      </div>
    </div>
    
</div>





<script src="/public/js/vendor/jquery.js"></script>
<script src="/public/js/vendor/what-input.js"></script>
<script src="/public/js/vendor/foundation.js"></script>
<script src="/public/js/app.js"></script>

</body>
</html>
