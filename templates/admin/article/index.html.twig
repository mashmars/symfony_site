{% extends 'admin/base.html.twig' %}
{% block breadcrumb %}
<li class="breadcrumb-item active">Layout Fix-header &amp; sidebar</li>
{% endblock %}
                {% block main %}
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <!-- Column -->
                    <div class="col-lg-12 col-xlg-6">
                        <div class="card">
                            <div class="card-body">                                
                                <div class="button-group">                                   
                                    <a href="{{ path('article_add') }}" class="btn waves-effect waves-light btn-success"><i class="ti-plus"></i> 新增</a>
									<span class="pull-right">
										<select name="status" class="custom-select">
											<option value="">按状态查</option>
											<option value="1" >审核通过</option>
											<option value="0" >审核未通过</option>
											<option value="2" >待审核</option>
										</select>
										
									<input type="text" name="code" placeholder="标题" style="width:150px" class="form-control form-control-sm" value="">
									<input type="text" name="phone_num" placeholder="ID" style="width:150px" class="form-control form-control-sm" value="">
									<button name="" class="btn btn-success" type="button"><i class="ti-search"></i> 搜索</button>	
									</span>									
                                </div>							

                            </div>	
							
                        </div>	
						
                    </div>
					
                    <!-- Column -->
                </div>
				<div class='row'>
					<div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">文章列表</h4>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>分类</th>
                                                <th>标题</th>
                                                <th>描述</th>
                                                <th>标签</th>
                                                <th>阅读数</th>
                                                <th>创建时间</th>
                                                <th class="text-nowrap">操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for article in pagination %}
                                            <tr>
                                                <td>{{ article.id }}</td>
                                                <td>{{ article.category.name }}</td>
                                                <td>{{ article.title }}</td>
                                                <td>{{ article.descript }}</td>
                                                <td>
                                                    {% for tag in article.tags %}
                                                    {{ tag.name }},
                                                    {% endfor %}
                                                </td>
                                                <td>{{ article.views }}</td>
                                                <td>{{ article.createdAt|date('Y-m-d') }}</td>
                                                <td class="text-nowrap">
                                                    <a href="{{ path('article_edit',{'id':article.id}) }}" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                                                    <a href="#" data-toggle="tooltip" data-original-title="Close"> <i class="fa fa-close text-danger"></i> </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>										
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>             
				</div>
				<nav aria-label="Page navigation" class="pull-right m-b-40">
                    {{ knp_pagination_render(pagination) }}
				</nav>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                {% endblock %}